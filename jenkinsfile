    stages {
        stage('Checkout') {
            steps {
                checkout scm

            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install -g serverless'
                sh 'npm install' // Install any project-specific dependencies
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'serverless deploy'
                }
            }
        }
    }

    post {
        success {
            echo 'Lambda function deployed successfully!'
        }
        failure {
            echo 'Deployment failed'
        }
    }
